<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatPlatformMobile.Pages.ChatOverviewPage"
             xmlns:behaviors="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:pages="clr-namespace:ChatPlatformMobile.Pages"
             x:DataType="pages:ChatOverviewViewModel">
    <ContentPage.Behaviors>
        <behaviors:EventToCommandBehavior EventName="Loaded"
                                          Command="{Binding InitCommand}" />
    </ContentPage.Behaviors>
    <VerticalStackLayout>
        <Button Command="{Binding CreateChatCommand}" />
        <ListView ItemsSource="{Binding Chats}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="Chat"></Label>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>